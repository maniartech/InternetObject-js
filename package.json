{
  "name": "internet-object",
  "version": "1.0.5-alpha.1",
  "description": "A lean, robust, and schema-first data interchange format for the Internet",
  "keywords": [
    "internet-object",
    "data-interchange",
    "schema",
    "json-alternative",
    "parser",
    "serializer",
    "typescript",
    "validation"
  ],
  "author": {
    "name": "Mohamed Aamir Maniar",
    "email": "contact@maniartech.com",
    "url": "https://maniartech.com"
  },
  "license": "ISC",
  "homepage": "https://internetobject.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/maniartech/InternetObject-js.git"
  },
  "bugs": {
    "url": "https://github.com/maniartech/InternetObject-js/issues"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "logo"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist/*",
    "clean-build": "yarn clean && yarn build",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:watch": "tsc -w",
    "minify": "terser dist/index.js -o dist/index.min.js --compress --mangle --source-map",
    "lint": "echo 'Linting placeholder - add ESLint/Prettier later'",
    "type-check": "tsc --noEmit",
    "security:audit": "yarn audit",
    "security:audit-fix": "yarn audit fix",
    "security:check": "yarn audit --level moderate",
    "deps:check": "yarn outdated",
    "deps:update": "yarn upgrade",
    "precommit": "yarn lint && yarn type-check && yarn test",
    "prepublishOnly": "yarn clean-build && yarn test",
    "perf": "ts-node performance.ts || node dist/performance.js",
    "perf:decimal": "ts-node performance.decimal.ts || node dist/performance.decimal.js",
    "build:perf": "yarn build && yarn perf",
    "bundle:analyze": "bash scripts/bundle-analyze.sh",
    "bundle:test-minimal": "bash scripts/bundle-test-minimal.sh",
    "bundle:test-full": "bash scripts/bundle-test-full.sh",
    "bundle:compare": "bash scripts/bundle-compare.sh",
    "bundle:budget-check": "bash scripts/bundle-budget-check.sh"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.0.0",
    "chalk": "^5.4.1",
    "esbuild": "^0.25.12",
    "jest": "^29.6.4",
    "terser": "^5.24.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
