{
  "name": "internet-object",
  "version": "1.0.5-alpha.1",
  "description": "Internet Object Typescript/JavaScript library",
  "keywords": [],
  "author": {
    "name": "Mohamed Aamir Maniar",
    "email": "contact@maniartech.com",
    "url": "https://maniartech.com"
  },
  "license": "ISC",
  "main": "./dist/index.js",
  "sideEffects": false,

  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./*": {
      "default": "./dist/*.js"
    }
  },

  "directories": {
    "test": "test"
  },

  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist/*",
    "clean-build": "yarn clean && yarn build",
    "build": "tsc",
    "build:watch": "tsc -w",
    "minify": "terser dist/index.js -o dist/index.min.js --compress --mangle --source-map",
    "lint": "echo 'Linting placeholder - add ESLint/Prettier later'",
    "type-check": "tsc --noEmit",
    "security:audit": "yarn audit",
    "security:audit-fix": "yarn audit fix",
    "security:check": "yarn audit --level moderate",
    "deps:check": "yarn outdated",
    "deps:update": "yarn upgrade",
    "precommit": "yarn lint && yarn type-check && yarn test",
    "prepare": "yarn build"
  },

  "devDependencies": {
    "@types/jest": "^29.5.4",
    "jest": "^29.6.4",
    "terser": "^5.24.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
